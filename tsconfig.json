{
  "compilerOptions": {
    "baseUrl": ".",  
    "outDir": "dist",
    "target": "es5",
    "module": "ESNext",
    "lib": [                                 
      "DOM",
      "ES5",
      "ES2015",
      "ES2016",
      "ES2017",
      "ES2018", 
      "ES2019",
      "ES2020"
    ],
    "paths": {
        "@app/*": ["src/*"]
    }, 
    "noImplicitAny": false,
    "jsx": "react-jsx",                   
    "declaration": true,                   
    "sourceMap": true,                        
    "strict": true,                    
    "noUnusedLocals": true,                 
    "noUnusedParameters": true,              
    "noImplicitReturns": true,               
    "noFallthroughCasesInSwitch": true,     
    "moduleResolution": "node",            
    "allowSyntheticDefaultImports": true,  
    "esModuleInterop": true,             
    "skipLibCheck": true,                   
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,              
    "downlevelIteration": true,      
    "emitDeclarationOnly": true,
    "declarationDir": "dist/types/"
  }, 
  "include": ["src", "setupTests.js", "mocks"],
  "exclude": ["node_modules", "dist", "src/**/*.test.*", "src/**/*.spec.*", "example-graphql"]
}
